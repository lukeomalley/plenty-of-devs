<div class="user-card">
  <%= render partial: 'users/user_pic', locals: {user: user}  %>
  <div class="content">
    <h2><%=user.first_name %></h2>
    <p><%=user.city %></p>
    <p><%=user.occupation %></p>
    <div class="buttons">
      <%= link_to "✅", like_user_path(user), method: :post %>
      <%= link_to "❌", dislike_user_path(user), method: :post %>
    </div>
  </div>
</div>