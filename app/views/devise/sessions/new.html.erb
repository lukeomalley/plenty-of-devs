<div class="border-form-div">
  <h2>Sign in</h2>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="form-fields">
        <%= f.email_field :email, :autofocus => true, :class => "text-input", :placeholder => "Email" %>
        <%= f.password_field :password, :class => "text-input", :placeholder => "Password" %>

        <%= f.submit "Sign in" %>
      </div>
    <% end %>
  <%= render "devise/shared/links" %>
</div>