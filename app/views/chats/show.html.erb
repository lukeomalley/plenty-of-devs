<% @chat.messages.each do |message| %>
  <%= render partial: "message", locals: {message: message} %>
<% end %>

<%= form_for @message do |f| %>
  <%= f.hidden_field :chat_id, value: @chat.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>
