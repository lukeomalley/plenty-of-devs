<div class="project-card">
  <h4><%= link_to project.name, project_path(project) %></h4>
  <p><%= project.description %></p>
  <div class="project-card-skills ">
    <% project.skills.each do |skill| %>
      <p class="skill-card"><%= skill.name %></p>
    <% end %>
  </div>
  <div class="project-actions">
    <% if project.is_featured %>
      <p class="star"> <%= fa_icon 'star' %>Featured Project</p>
    <% else %>
      <%= link_to "Set as featured project", featured_project_path(project), method: :post %>
    <% end %>
    <%= link_to 'Delete this project', project_path(project), method: :delete, data: {confirm: 'Are you sure you would like to delete this project?'} %>
  </div>
</div>